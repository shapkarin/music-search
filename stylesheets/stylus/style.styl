support-for-ie ?= false
vendor-prefixes ?= webkit moz o official

@import 'nib'
@import "variables"
@import "keyframes"

.history
  margin-bottom 20px

  > .search
    background-color #f8f8f8
    display inline-block
    margin-right 8px
    cursor pointer

    > .remove
      border-left 1px solid darken(#f8f8f8, 8%)
      padding 10px

    > .query
      padding 10px 14px 10px 10px

    > .query, > .remove
      float left

    > .remove:hover, > .query:hover
      background-color darken(#f8f8f8, 10%)

#search_results
  perspective 1000

  .search_result
    opacity 0
    animation-name fadeZoomIn
    animation-timing-function linear
    animation-direction normal
    animation-fill-mode forwards
    animation-duration 300ms
    border 1px solid lightgray
    border-radius 5px
    margin-bottom 30px
    overflow hidden
    position relative

    @media screen and (max-width $screen-sm-min)
      animation-name fadeIn

    .info
      .stat
        margin-top 7px

    &:hover .rank
      opacity 1

    .rank
      position absolute
      padding 5px 10px
      color #fff
      background-color rgba(0,0,0,0.6)
      opacity 0
      transition opacity .2s linear
      border-top-left-radius 4px
      border-bottom-right-radius 4px

    .info
      padding 8px 10px

    .album-cover
      position relative
      > img
        max-width 100%

      .audio
        width 100%
        position absolute
        bottom 0

      @media screen and (max-width $screen-sm-min)
        float left
        width $cover-width
        margin-right $cover-margin
        position static

        > .rank
          opacity 1

        .audio
          padding 0 $cover-margin ($cover-margin / 2) ($cover-width + $cover-margin)

        .album-cover
          position relative


.byArtist .search_result
  height $artist-h

  @media screen and (max-width: $screen-lg-min)
    height $artist-h - 45px !important

.byTag .search_result
  height $tag-h

  @media screen and (max-width: $screen-lg-min)
    height $tag-h - 45px !important

@media screen and (max-width $screen-sm-min)
  .byArtist .search_result, .byTag .search_result
    height 150px !important

.radio
  margin-left 10px

.navbar-default .navbar-collapse, .navbar-default .navbar-form
    border: none;
